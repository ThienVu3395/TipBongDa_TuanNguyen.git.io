<!--result area start-->
<div class="laliga-box result-box pad60">
    <form name="timeForm" novalidate>
        <div class="container">
            <div class="row">
                <div class="form-group col-lg-4">
                    <label class="text-success">Giải Đấu</label>
                    <select 
                            class="form-control" 
                            id="sel1" 
                            ng-model="leagueId" 
                            ng-options="item as item.league_name + ' - ' + item.league_season for item in listLeague track by item.league_id"
                            ng-change="getResult()">
                    </select>
                </div>

                @*<div class="form-group col-lg-5">
                    <label class="text-success">Chọn Ngày</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control pull-right" id="reservation" />
                    </div>
                </div>*@

                <div class="form-group col-lg-4">
                    <label class="text-success">Từ Ngày</label>
                    <input type="date" class="form-control" ng-model="FromDate" name="Form" ng-change="getResult()" ng-required="true" />
                    <span class="error text-danger" ng-show="timeForm.Form.$error.required">Bạn chưa nhập ngày bắt đầu</span>
                    <span class="valid" ng-show="timeForm.Form.$valid"></span>
                </div>
                <div class="form-group col-lg-4">
                    <label class="text-success">Tới Ngày</label>
                    <input type="date" class="form-control" ng-model="ToDate" name="To" ng-change="getResult()" ng-required="true" />
                    <span class="error text-danger" ng-show="timeForm.To.$error.required">Bạn chưa nhập ngày kết thúc</span>
                    <span class="valid" ng-show="timeForm.To.$valid"></span>
                </div>

                <div class="col-md-12" ng-hide="timeForm.$invalid">
                    <h4 class="text-center"><img src={{imgStanding}} height="70" /></h4>
                    <div class="fixture-box bb-1" ng-repeat="item in listResult">
                        <div class="club-fixture">
                            <div class="club-img">
                                <img class="sm-img" src={{item.team_home_badge}} alt="club logo">
                                <span>{{item.match_hometeam_name}}</span>
                            </div>
                            <div class="club-schedule text-center">
                                <h5>{{item.match_hometeam_score}} : {{item.match_awayteam_score}}</h5>
                                <p>{{item.match_date}}  {{item.match_time}}</p>
                            </div>
                            <div class="club-img">
                                <span>{{item.match_awayteam_name}}</span>
                                <img class="sm-img" src={{item.team_away_badge}} alt="club logo">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<!--fixtures area end-->