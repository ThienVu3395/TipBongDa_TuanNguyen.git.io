@{ 
    ApplicationUser user = ViewBag.User;
}
@if (User.Identity.IsAuthenticated)
{
    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="~/Photos/Users/@user.Avatar" class="user-image" alt="User Image">
            <span class="hidden-xs">@user.UserName</span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
                <img src="~/Photos/Users/@user.Avatar" class="img-circle" alt="User Image">
                <p>
                    @user.UserName<br />
                    @user.FullName
                </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
                <div class="pull-left">
                    <a href="@Url.Action("Index","Manage")" class="btn btn-default btn-flat">Thông tin cá nhân</a>
                </div>
                <div class="pull-right">
                    <form id="logoutForm" class="navbar-right" action="@Url.Action("LogOff","Account")" method="post">
                        @Html.AntiForgeryToken()
                    </form>
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Đăng xuất</a>
                </div>
            </li>
        </ul>
    </li>
}
