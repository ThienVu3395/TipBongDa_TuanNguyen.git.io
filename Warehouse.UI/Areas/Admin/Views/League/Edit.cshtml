@model League
@{
    ViewBag.Title = "Sửa Thông Tin Giải Đấu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Dashboard")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    @using (Html.BeginForm("Edit", "League", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.league_id)
                        @Html.HiddenFor(model => model.logo)
                        @Html.HiddenFor(model => model.status)
                        @Html.HiddenFor(model => model.country_id)
                        @Html.HiddenFor(model => model.country_name)
                        <div class="form-group">
                            <label class="control-label col-md-3">Sửa Logo (Size 100x100)</label>
                            <div class="col-md-6">
                                <input type="file" name="file" />
                                @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.league_name, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.league_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.league_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.sort_order, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.sort_order, new { htmlAttributes = new { type = "number", step = "1", min = 1, @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.sort_order, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-6">
                                <input type="submit" value="Cập Nhật" class="btn btn-success" />
                                @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


