@model InfoWeb

@{
    ViewBag.Title = "Thông Tin Chung Của Web";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        dd, dt {
            padding: 10px;
        }

        /*dd {
            font-weight: bolder;
            color: #4800ff;
        }*/
    </style>
}
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Dashboard")"><i class="fa fa-dashboard"></i> Bảng điều khiển</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.WebName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.WebName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Logo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Logo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Phone)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Phone)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Zalo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Zalo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Email)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Address)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Address)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Fanpage)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Fanpage)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GoogleAnalytics)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.GoogleAnalytics)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Google_Map)
                            </dt>

                            <dd>
                                @Html.Raw(Model.Google_Map)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.GoldenGoalGameRule)
                            </dt>

                            <dd>
                                @Html.Raw(Model.GoldenGoalGameRule)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Prophet1x2GameRule)
                            </dt>

                            <dd>
                                @Html.Raw(Model.Prophet1x2GameRule)
                            </dd>
                            <dt>
                                <span data-toggle="tooltip" title="@Model.AboutInHome">@Html.DisplayNameFor(model => model.AboutInHome)</span>
                            </dt>

                            <dd>
                                @Html.Raw(Model.AboutInHome)
                            </dd>
                        </dl>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix text-right">
                        @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-default btn-sm" })
                    </div>
                </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

